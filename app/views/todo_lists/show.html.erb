<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Color:</strong>
  <%= @todo_list.color %>
</p>

<p>
  <strong>Done:</strong>
  <%= @todo_list.done %>
</p>

<h2>List Items</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_list.list_items.each do |list_item| %>
      <tr>
        <td><%= list_item.title %></td>
        <td><%= list_item.priority %></td>
        <td><%= list_item.due_date %></td>
        <td><%= list_item.done %></td>
        <td><%= link_to 'Show', [@todo_list, list_item] %></td> 
        <td><%= link_to 'Edit', edit_todo_list_list_item_path(@todo_list, list_item) %></td> 
        <td><%= link_to 'Destroy', [@todo_list, list_item], method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr> 
    <% end %> 
  </tbody> 
</table> 

<br> 

<%= link_to 'New List Item', new_todo_list_list_item_path(@todo_list) %> 
<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %> 
